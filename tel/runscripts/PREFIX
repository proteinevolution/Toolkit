#!/bin/bash

trap catch_errors ERR;
function catch_errors() {

    curl -X POST http://%HOSTNAME:%PORT/jobs/error/%jobid.content
    echo "script aborted, because of errors"
    exit 0
}
curl -X POST http://%HOSTNAME:%PORT/jobs/running/%jobid.content

rm -rf ../results
rm -rf ../logs

mkdir ../results
mkdir ../logs


